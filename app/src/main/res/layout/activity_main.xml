<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <View
        android:id="@+id/headerView"
        android:layout_width="0dp"
        android:layout_height="320dp"
        android:background="@drawable/header_gradient"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <View
        android:id="@+id/ic_person_bg"
        android:layout_width="45dp"
        android:layout_height="45dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/icon_circle_blue"
        android:layout_marginStart="25dp"
        android:layout_marginTop="30dp"/>
    
    <ImageView
        android:id="@+id/id_person"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@drawable/ic_person"
        android:layout_marginStart="28dp"
        android:layout_marginTop="30dp"/>

    <TextView
        android:id="@+id/headerDashboard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/ic_person_bg"
        android:text="Dashboard Mahasiswa"
        android:layout_marginTop="30dp"
        android:layout_marginStart="10dp"
        android:textColor="@color/white"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/txSistemAbsensi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/headerDashboard"
        app:layout_constraintStart_toEndOf="@id/ic_person_bg"
        android:text="Sistem Absensi"
        android:layout_marginStart="10dp"
        android:textColor="@color/white"/>

    <include
        android:id="@+id/info_card_include"
        layout="@layout/layout_card_profile"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:elevation="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txSistemAbsensi"
        android:layout_marginTop="15dp"/>

    <include
        android:id="@+id/absenAccepted"
        layout="@layout/absen_accepted"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/info_card_include"
        android:layout_marginEnd="220dp"
        android:layout_marginTop="15dp"/>

    <Button
        android:id="@+id/buttonReqAbsen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/absenAccepted"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="10dp"
        android:text="Request Absen"
        android:backgroundTint="@color/colorPrimary"
        />

    <TextView
        android:id="@+id/txRiwayatAbsensi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/buttonReqAbsen"
        app:layout_constraintStart_toStartOf="parent"
        android:text="Riwayat Absensi"
        android:textSize="15sp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="25dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvRiwayatAbsensi"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/txRiwayatAbsensi"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="10dp"/>




    <!--    <View-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="wrap_content"-->




</androidx.constraintlayout.widget.ConstraintLayout>